{
  "manifest_version": 3,
  "name": "Articles Summarizer",
  "version": "1.0",
  "description": "A Chrome extension that summarizes text on the current page using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ai.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["styles/popup.css", "ai.js"],
      "matches": ["<all_urls>"]
    }
  ]
}