{
  "manifest_version": 3,
  "name": "Articles Summarizer",
  "version": "1.0",
  "description": "A Chrome extension that summarizes text on the current page using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/ai.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "src/options.html",
  "web_accessible_resources": [
    {
      "resources": ["src/styles/popup.css", "src/ai.js"],
      "matches": ["<all_urls>"]
    }
  ]
}